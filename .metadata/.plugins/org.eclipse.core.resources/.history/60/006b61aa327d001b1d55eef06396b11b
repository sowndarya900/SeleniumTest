	@AfterMethod
	public void TearDown(ITestResult Result) throws IOException {
		System.out.println("Result.getStatus()"+Result.getStatus());
		if(Result.getStatus()==ITestResult.FAILURE) {
			test.log(LogStatus.FAIL, "unable to navigate to home page");
			//test.log(LogStatus.FAIL, "Test case failed is"+Result.getThrowable());	
			String screenshotpath=u.getScreenshot(driver, Result.getName());
			//test.log(LogStatus.FAIL, test.addScreenCapture(screenshotpath));
			//String screenshot_path=Utility.captureScreenshot(driver, result.getName());
			String image= test.addScreenCapture(screenshotpath);
			test.log(LogStatus.FAIL, "unable to navigate to homepage", image);		
			extent.endTest(test);
		}
		extent.endTest(test);
		driver.close();
		driver.quit();
		extent.flush();	
	}




}
